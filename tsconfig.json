{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "strictNullChecks": true,
        "noEmit": true,
        "incremental": true,
        "module": "esnext",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "paths": {
            "@/*": ["./*"],
            "@/components/*": ["./components/*"],
            "@/lib/*": ["./lib/*"],
            "@/hooks/*": ["./hooks/*"],
            "@/ui/*": ["./components/ui/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "tailwind.config.mjs"],
    "exclude": ["node_modules"]
}
